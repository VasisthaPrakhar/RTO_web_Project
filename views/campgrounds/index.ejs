<% layout('layouts/boilerplate')%>
<div class="index"></div>
<h1>All Users!!</h1>
<div>
  <a href="/home/new">Add New User</a>
</div>

<% for (let campground of campgrounds) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <h1><%= campground.Name %></h1>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.Dob %></h5>
        <p class="card-text"><%= campground.Category %></p>
        <p class="card-text">
          <small class="text-muted"><%= campground.age %> </small>
        </p>
        <a class="btn btn-primary btn-info" href="/home/<%= campground.id %> "
          >View <%= campground.Name %>
        </a>
      </div>
    </div>
  </div>
</div>
</div>
<% } %>

<style>
  .index .card {
    margin-top: 5rem;
    margin-bottom: 10rem;
  }
  .index h5 {
    font-family: "Montserrat", sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
  }
  .index p {
    font-family: "Roboto", sans-serif;
    font-size: 1.25rem;
  }
  .index .card h1 {
    font-family: "Montserrat", sans-serif;
    font-size: 2rem;
  }

  .index h1 {
    font-family: "Source Sans Pro", sans-serif;
    font-size: 4rem;
    font-weight: 800;
  }
</style>
